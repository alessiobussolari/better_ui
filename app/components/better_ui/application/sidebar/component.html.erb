<div class="<%= wrapper_classes %>" 
     data-controller="bui_sidebar" 
     data-bui_sidebar-open-value="true">
  <div class="<%= container_classes %>">
    <!-- Header -->
    <% if has_header? %>
      <%= header %>
    <% end %>

    <!-- Navigation -->
    <nav class="flex-1 px-4 py-6 space-y-8 overflow-y-auto">
      <% navigation_sections.each do |section| %>
        <%= section %>
      <% end %>
    </nav>

    <!-- Footer -->
    <% if has_footer? %>
      <%= footer %>
    <% end %>
  </div>
</div>
