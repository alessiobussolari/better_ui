<div class="<%= header_classes %>">
  
  
  <% if has_title? || has_subtitle? %>
    <div class="<%= has_logo? ? 'ml-3' : '' %>">
      <% if has_title? %>
        <h1 class="<%= title_classes %>"><%= @title %></h1>
      <% end %>
      <% if has_subtitle? %>
        <p class="<%= subtitle_classes %>"><%= @subtitle %></p>
      <% end %>
    </div>
  <% end %>
</div>