<a href="<%= url %>" 
   class="<%= link_classes %>"
   <%= 'target="_blank" rel="noopener"' if external %>>
  <% if icon.present? %>
    <span class="bui-sidebar-link__icon"><%= icon %></span>
  <% end %>
  
  <% unless compact %>
    <span class="bui-sidebar-link__text"><%= text %></span>
  <% end %>
  
  <% if badge.present? %>
    <span class="bui-sidebar-link__badge"><%= badge %></span>
  <% end %>
  
  <% if external %>
    <span class="bui-sidebar-link__external-icon">
      <svg width="12" height="12" viewBox="0 0 12 12" fill="none">
        <path d="M5.5 2H2a1 1 0 00-1 1v7a1 1 0 001 1h7a1 1 0 001-1V6.5M6 6l5-5M8.5 1H11v2.5" stroke="currentColor" stroke-linecap="round" stroke-linejoin="round"/>
      </svg>
    </span>
  <% end %>
</a> 