<%# Template for card component %>

<%= tag.div(**html_attributes) do %>
  <% if header? %>
    <div class="bui-card__header">
      <%= header %>
    </div>
  <% end %>
  
  <% if body? %>
    <div class="bui-card__body">
      <%= body %>
    </div>
  <% end %>
  
  <% if footer? %>
    <div class="bui-card__footer">
      <%= footer %>
    </div>
  <% end %>
<% end %>