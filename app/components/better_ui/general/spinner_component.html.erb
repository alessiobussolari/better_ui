<div <%= tag.attributes(spinner_attributes) %>>
  <div class="bui-spinner__animation"></div>
  
  <% if @label.present? %>
    <div class="bui-spinner__label">
      <%= @label %>
    </div>
  <% end %>
  
  <% if content.present? %>
    <div class="bui-spinner__content">
      <%= content %>
    </div>
  <% end %>
</div> 