<div class="<%= panel_classes %>">
  <% if @header.present? %>
    <div class="<%= header_classes %>">
      <%= raw @header %>
    </div>
  <% elsif @title.present? %>
    <div class="<%= header_classes %>">
      <div class="<%= title_classes %>"><%= @title %></div>
    </div>
  <% end %>
  
  <% if @body.present? %>
    <div class="<%= body_classes %>">
      <%= raw @body %>
    </div>
  <% elsif content.present? %>
    <div class="<%= body_classes %>">
      <%= content %>
    </div>
  <% end %>
  
  <% if @footer.present? %>
    <div class="<%= footer_classes %>">
      <%= raw @footer %>
    </div>
  <% end %>
</div> 