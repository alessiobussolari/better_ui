<div class="fixed top-0 left-0 bottom-0 w-72 shadow-lg bg-gradient-to-b from-blue-50 to-indigo-50 border-r border-indigo-100 overflow-y-auto">
  <!-- Logo e titolo -->
  <div class="flex items-center p-5 border-b border-indigo-100">
    <div class="bg-gradient-to-r from-blue-500 to-indigo-600 w-10 h-10 rounded-lg flex items-center justify-center shadow-md">
      <span class="text-white font-bold text-xl">B</span>
    </div>
    <h1 class="ml-3 text-xl font-bold bg-clip-text text-transparent bg-gradient-to-r from-blue-600 to-indigo-600">BetterUI</h1>
  </div>
  
  <!-- Menu di navigazione -->
  <nav class="pt-5 px-4">
    <!-- Sezione Documentazione -->
    <div class="mb-6">
      <h3 class="text-xs uppercase tracking-wider text-indigo-500 font-semibold ml-2 mb-3">Documentazione</h3>
      <ul class="space-y-1">
        <li>
          <%= link_to better_ui.docs_page_path('introduction'), class: "flex items-center px-3 py-2 text-gray-700 hover:bg-indigo-100 hover:text-indigo-700 rounded-lg transition-all duration-200 #{current_page?(better_ui.docs_page_path('introduction')) ? 'bg-indigo-100 text-indigo-700 font-medium' : ''}" do %>
            <svg class="w-5 h-5 mr-2 opacity-70" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
            </svg>
            <span>Introduzione</span>
          <% end %>
        </li>
        <li>
          <%= link_to better_ui.docs_page_path('installation'), class: "flex items-center px-3 py-2 text-gray-700 hover:bg-indigo-100 hover:text-indigo-700 rounded-lg transition-all duration-200 #{current_page?(better_ui.docs_page_path('installation')) ? 'bg-indigo-100 text-indigo-700 font-medium' : ''}" do %>
            <svg class="w-5 h-5 mr-2 opacity-70" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16v1a3 3 0 003 3h10a3 3 0 003-3v-1m-4-8l-4-4m0 0L8 8m4-4v12"></path>
            </svg>
            <span>Installazione</span>
          <% end %>
        </li>
        <li>
          <%= link_to better_ui.docs_page_path('customization'), class: "flex items-center px-3 py-2 text-gray-700 hover:bg-indigo-100 hover:text-indigo-700 rounded-lg transition-all duration-200 #{current_page?(better_ui.docs_page_path('customization')) ? 'bg-indigo-100 text-indigo-700 font-medium' : ''}" do %>
            <svg class="w-5 h-5 mr-2 opacity-70" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6V4m0 2a2 2 0 100 4m0-4a2 2 0 110 4m-6 8a2 2 0 100-4m0 4a2 2 0 110-4m0 4v2m0-6V4m6 6v10m6-2a2 2 0 100-4m0 4a2 2 0 110-4m0 4v2m0-6V4"></path>
            </svg>
            <span>Personalizzazione</span>
          <% end %>
        </li>
      </ul>
    </div>
  </nav>
  
  <!-- Footer della sidebar -->
  <div class="absolute bottom-0 left-0 right-0 p-4 text-center text-sm text-gray-500 border-t border-indigo-100">
    <p>BetterUI v0.1.0</p>
  </div>
</div> 