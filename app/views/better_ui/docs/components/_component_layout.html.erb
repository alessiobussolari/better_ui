<% 
# Parametri del partial:
# - title: Titolo del componente
# - description: Descrizione breve del componente
# - sections: Array di hash con le sezioni della documentazione (id, title)
# - examples: Array di hash con gli esempi (id, title)
%>

<div class="mb-8">
  <h1 class="text-3xl font-bold mb-4"><%= title %></h1>
  
  <p class="mb-4">
    <%= description %>
  </p>
</div>

<div class="flex flex-col md:flex-row gap-8">
  <!-- Menu di navigazione laterale -->
  <div class="md:w-64 flex-shrink-0">
    <div class="sticky top-4">
      <div class="bg-gray-50 rounded-lg p-4 shadow-sm border border-gray-100">
        <h3 class="text-sm font-semibold text-gray-500 uppercase tracking-wider mb-3">Contenuti</h3>
        
        <nav class="space-y-1">
          <% if examples.present? %>
            <div class="mb-3">
              <h4 class="text-sm font-medium text-gray-700 mb-2">Esempi</h4>
              <ul class="ml-3 space-y-1">
                <% examples.each do |example| %>
                  <li>
                    <a href="#<%= example[:id] %>" class="text-sm text-indigo-600 hover:text-indigo-800 hover:underline">
                      <%= example[:title] %>
                    </a>
                  </li>
                <% end %>
              </ul>
            </div>
          <% end %>
          
          <% if sections.present? %>
            <div>
              <h4 class="text-sm font-medium text-gray-700 mb-2">Sezioni</h4>
              <ul class="ml-3 space-y-1">
                <% sections.each do |section| %>
                  <li>
                    <a href="#<%= section[:id] %>" class="text-sm text-indigo-600 hover:text-indigo-800 hover:underline">
                      <%= section[:title] %>
                    </a>
                  </li>
                <% end %>
              </ul>
            </div>
          <% end %>
        </nav>
      </div>
    </div>
  </div>
  
  <!-- Contenuto principale -->
  <div class="flex-1">
    <%= yield %>
  </div>
</div> 