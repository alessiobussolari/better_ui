<% content_for :title, 'Bottoni - Documentazione Componenti' %>

<div class="mb-8">
  <h1 class="text-3xl font-bold mb-4">Bottoni</h1>
  
  <p class="mb-4">
    I bottoni sono elementi fondamentali per l'interazione utente. BetterUi offre un componente bottone 
    versatile con numerose opzioni di personalizzazione.
  </p>
</div>

<div class="mb-8">
  <h2 class="text-2xl font-semibold mb-4">Utilizzo base</h2>
  
  <div class="mb-6">
    <div class="flex space-x-2 mb-4">
      <%= render BetterUi::ButtonComponent.new(label: "Primary", type: :primary) %>
      <%= render BetterUi::ButtonComponent.new(label: "Secondary", type: :secondary) %>
      <%= render BetterUi::ButtonComponent.new(label: "Success", type: :success) %>
      <%= render BetterUi::ButtonComponent.new(label: "Danger", type: :danger) %>
    </div>
    
    <div class="bg-gray-50 p-4 rounded-md mb-4">
      <pre><code class="language-erb">&lt;%= render BetterUi::ButtonComponent.new(label: "Primary", type: :primary) %&gt;
&lt;%= render BetterUi::ButtonComponent.new(label: "Secondary", type: :secondary) %&gt;
&lt;%= render BetterUi::ButtonComponent.new(label: "Success", type: :success) %&gt;
&lt;%= render BetterUi::ButtonComponent.new(label: "Danger", type: :danger) %&gt;</code></pre>
    </div>
  </div>
</div>

<div class="mb-8">
  <h2 class="text-2xl font-semibold mb-4">Varianti</h2>
  
  <div class="mb-6">
    <h3 class="text-xl font-semibold mb-3">Bottoni Outline</h3>
    <div class="flex space-x-2 mb-4">
      <%= render BetterUi::ButtonComponent.new(label: "Primary", type: :primary, outline: true) %>
      <%= render BetterUi::ButtonComponent.new(label: "Success", type: :success, outline: true) %>
      <%= render BetterUi::ButtonComponent.new(label: "Danger", type: :danger, outline: true) %>
    </div>
    
    <div class="bg-gray-50 p-4 rounded-md mb-4">
      <pre><code class="language-erb">&lt;%= render BetterUi::ButtonComponent.new(label: "Primary", type: :primary, outline: true) %&gt;</code></pre>
    </div>
  </div>
  
  <div class="mb-6">
    <h3 class="text-xl font-semibold mb-3">Dimensioni</h3>
    <div class="flex items-center space-x-2 mb-4">
      <%= render BetterUi::ButtonComponent.new(label: "Small", type: :primary, size: :sm) %>
      <%= render BetterUi::ButtonComponent.new(label: "Medium", type: :primary) %>
      <%= render BetterUi::ButtonComponent.new(label: "Large", type: :primary, size: :lg) %>
    </div>
    
    <div class="bg-gray-50 p-4 rounded-md mb-4">
      <pre><code class="language-erb">&lt;%= render BetterUi::ButtonComponent.new(label: "Small", type: :primary, size: :sm) %&gt;
&lt;%= render BetterUi::ButtonComponent.new(label: "Medium", type: :primary) %&gt;
&lt;%= render BetterUi::ButtonComponent.new(label: "Large", type: :primary, size: :lg) %&gt;</code></pre>
    </div>
  </div>
  
  <div class="mb-6">
    <h3 class="text-xl font-semibold mb-3">Full Width</h3>
    <div class="w-full max-w-sm mb-4">
      <%= render BetterUi::ButtonComponent.new(label: "Full Width Button", type: :primary, full_width: true) %>
    </div>
    
    <div class="bg-gray-50 p-4 rounded-md mb-4">
      <pre><code class="language-erb">&lt;%= render BetterUi::ButtonComponent.new(label: "Full Width Button", type: :primary, full_width: true) %&gt;</code></pre>
    </div>
  </div>
</div>

<div class="mb-8">
  <h2 class="text-2xl font-semibold mb-4">Con Icone</h2>
  
  <div class="mb-6">
    <div class="flex space-x-2 mb-4">
      <%= render BetterUi::ButtonComponent.new(label: "Download", type: :primary, icon: "download") %>
      <%= render BetterUi::ButtonComponent.new(label: "Vai avanti", type: :primary, icon: "arrow-right", icon_position: :right) %>
    </div>
    
    <div class="bg-gray-50 p-4 rounded-md mb-4">
      <pre><code class="language-erb">&lt;%= render BetterUi::ButtonComponent.new(label: "Download", type: :primary, icon: "download") %&gt;
&lt;%= render BetterUi::ButtonComponent.new(label: "Vai avanti", type: :primary, icon: "arrow-right", icon_position: :right) %&gt;</code></pre>
    </div>
  </div>
</div>

<div class="mb-8">
  <h2 class="text-2xl font-semibold mb-4">Link Button</h2>
  
  <div class="mb-6">
    <div class="flex space-x-2 mb-4">
      <%= render BetterUi::ButtonComponent.new(label: "Link Button", type: :primary, href: "#") %>
      <%= render BetterUi::ButtonComponent.new(label: "Link con metodo", type: :danger, href: "#", method: :delete) %>
    </div>
    
    <div class="bg-gray-50 p-4 rounded-md mb-4">
      <pre><code class="language-erb">&lt;%= render BetterUi::ButtonComponent.new(label: "Link Button", type: :primary, href: "#") %&gt;
&lt;%= render BetterUi::ButtonComponent.new(label: "Link con metodo", type: :danger, href: "#", method: :delete) %&gt;</code></pre>
    </div>
  </div>
</div>

<div class="mb-8">
  <h2 class="text-2xl font-semibold mb-4">API Completa</h2>
  
  <div class="overflow-x-auto mb-6">
    <table class="min-w-full border-collapse bg-white">
      <thead>
        <tr>
          <th class="py-3 px-4 bg-gray-50 text-left text-xs font-medium text-gray-500 uppercase tracking-wider border">Opzione</th>
          <th class="py-3 px-4 bg-gray-50 text-left text-xs font-medium text-gray-500 uppercase tracking-wider border">Tipo</th>
          <th class="py-3 px-4 bg-gray-50 text-left text-xs font-medium text-gray-500 uppercase tracking-wider border">Default</th>
          <th class="py-3 px-4 bg-gray-50 text-left text-xs font-medium text-gray-500 uppercase tracking-wider border">Descrizione</th>
        </tr>
      </thead>
      <tbody class="divide-y divide-gray-200">
        <tr>
          <td class="py-2 px-4 border">label</td>
          <td class="py-2 px-4 border">String</td>
          <td class="py-2 px-4 border">nil</td>
          <td class="py-2 px-4 border">Testo del bottone</td>
        </tr>
        <tr>
          <td class="py-2 px-4 border">type</td>
          <td class="py-2 px-4 border">Symbol</td>
          <td class="py-2 px-4 border">:primary</td>
          <td class="py-2 px-4 border">Tipo del bottone (primary, secondary, success, danger, warning, info, light, dark)</td>
        </tr>
        <tr>
          <td class="py-2 px-4 border">size</td>
          <td class="py-2 px-4 border">Symbol</td>
          <td class="py-2 px-4 border">:md</td>
          <td class="py-2 px-4 border">Dimensione del bottone (sm, md, lg)</td>
        </tr>
        <tr>
          <td class="py-2 px-4 border">outline</td>
          <td class="py-2 px-4 border">Boolean</td>
          <td class="py-2 px-4 border">false</td>
          <td class="py-2 px-4 border">Se il bottone deve essere outline</td>
        </tr>
        <tr>
          <td class="py-2 px-4 border">full_width</td>
          <td class="py-2 px-4 border">Boolean</td>
          <td class="py-2 px-4 border">false</td>
          <td class="py-2 px-4 border">Se il bottone deve occupare tutta la larghezza disponibile</td>
        </tr>
        <tr>
          <td class="py-2 px-4 border">disabled</td>
          <td class="py-2 px-4 border">Boolean</td>
          <td class="py-2 px-4 border">false</td>
          <td class="py-2 px-4 border">Se il bottone deve essere disabilitato</td>
        </tr>
        <tr>
          <td class="py-2 px-4 border">icon</td>
          <td class="py-2 px-4 border">String</td>
          <td class="py-2 px-4 border">nil</td>
          <td class="py-2 px-4 border">Nome dell'icona da mostrare</td>
        </tr>
        <tr>
          <td class="py-2 px-4 border">icon_position</td>
          <td class="py-2 px-4 border">Symbol</td>
          <td class="py-2 px-4 border">:left</td>
          <td class="py-2 px-4 border">Posizione dell'icona (left, right)</td>
        </tr>
        <tr>
          <td class="py-2 px-4 border">href</td>
          <td class="py-2 px-4 border">String</td>
          <td class="py-2 px-4 border">nil</td>
          <td class="py-2 px-4 border">URL per renderizzare il bottone come link</td>
        </tr>
        <tr>
          <td class="py-2 px-4 border">method</td>
          <td class="py-2 px-4 border">Symbol</td>
          <td class="py-2 px-4 border">nil</td>
          <td class="py-2 px-4 border">Metodo HTTP per il link (get, post, put, patch, delete)</td>
        </tr>
        <tr>
          <td class="py-2 px-4 border">data</td>
          <td class="py-2 px-4 border">Hash</td>
          <td class="py-2 px-4 border">{}</td>
          <td class="py-2 px-4 border">Attributi data aggiuntivi</td>
        </tr>
        <tr>
          <td class="py-2 px-4 border">classes</td>
          <td class="py-2 px-4 border">String</td>
          <td class="py-2 px-4 border">nil</td>
          <td class="py-2 px-4 border">Classi CSS aggiuntive</td>
        </tr>
        <tr>
          <td class="py-2 px-4 border">id</td>
          <td class="py-2 px-4 border">String</td>
          <td class="py-2 px-4 border">nil</td>
          <td class="py-2 px-4 border">ID HTML del bottone</td>
        </tr>
      </tbody>
    </table>
  </div>
</div> 