<%
# Parametri:
# - id: ID della sezione per l'ancora
# - title: Titolo della sezione
# - headers: Array di stringhe con le intestazioni della tabella
# - rows: Array di array con i dati delle righe
%>

<div id="<%= id %>" class="mb-8">
  <h2 class="text-2xl font-semibold mb-4"><%= title %></h2>
  
  <div class="overflow-x-auto mb-6 rounded border">
    <table class="min-w-full border-collapse bg-white">
      <thead>
        <tr>
          <% headers.each do |header| %>
            <th class="py-3 px-4 bg-gray-50 text-left text-xs font-medium text-gray-500 uppercase tracking-wider border"><%= header %></th>
          <% end %>
        </tr>
      </thead>
      <tbody class="divide-y divide-gray-200">
        <% rows.each do |row| %>
          <tr>
            <% row.each_with_index do |cell, index| %>
              <td class="py-2 px-4 border text-sm <%= index == headers.size - 1 ? 'break-words' : '' %>" <%= index == headers.size - 1 ? 'style="max-width: 300px;"' : '' %>><%= cell %></td>
            <% end %>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div> 