<%#
  Partial per il layout complessivo della pagina di documentazione dei componenti
  
  Parametri:
  - title: Titolo del componente/pagina
  - description: Descrizione del componente/pagina
  - examples: Array di hash con gli esempi [{ id: 'example-id', title: 'Titolo Esempio' }]
  - sections: Array di hash con le sezioni [{ id: 'section-id', title: 'Titolo Sezione' }]
%>

<div class="mb-8">
  <h1 class="text-3xl font-bold mb-4"><%= local_assigns[:title] %></h1>
  
  <% if local_assigns[:description].present? %>
    <p class="mb-4"><%= local_assigns[:description] %></p>
  <% end %>
</div>

<div class="flex flex-col md:flex-row gap-8">
  <%= render "better_ui/docs/shared/sidebar_nav", 
      examples: local_assigns[:examples], 
      sections: local_assigns[:sections] %>
  
  <!-- Contenuto principale -->
  <div class="flex-1">
    <%= yield %>
  </div>
</div> 