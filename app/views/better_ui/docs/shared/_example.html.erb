<%
# Parametri:
# - id: ID dell'esempio per l'ancora
# - title: Titolo dell'esempio
# - description: Descrizione opzionale dell'esempio
# - snippets: Codice ERB da mostrare e renderizzare
%>

<div id="<%= id %>" class="mb-8">
  <h3 class="text-xl font-semibold mb-3"><%= title %></h3>
  
  <% if defined?(description) && description.present? %>
    <p class="mb-4 text-gray-600"><%= description %></p>
  <% end %>
  
  <div class="mb-6">
    <div class="p-6 bg-white rounded-t-lg border border-gray-200 shadow-sm">
      <% if defined?(snippets) && snippets.present? %>
        <div class="flex flex-wrap gap-4">
          <% snippets.each do |snippet| %>
            <%= render eval(snippet) %>
          <% end %>
        </div>
      <% else %>
        <%= yield %>
      <% end %>
    </div>
    
    <div class="bg-gray-50 p-4 rounded-b-lg border border-gray-200 border-t-0">
      <pre class="overflow-x-auto text-sm rounded border border-gray-200 mb-0">
        <code class="syntax-ruby block whitespace-pre p-4"><%= raw CodeRay.scan(snippets.join("\n\n"), :ruby).html(line_numbers: nil, css: :class) %></code>
      </pre>
    </div>
  </div>
</div> 