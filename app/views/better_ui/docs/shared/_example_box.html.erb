<%#
  Partial per mostrare esempi di componenti in modo standardizzato
  
  Parametri:
  - id: ID per l'ancoraggio (opzionale)
  - title: Titolo dell'esempio
  - description: Descrizione dell'esempio (opzionale)
  - code_snippet: Il codice da mostrare nell'area di codice
%>

<% id_attr = local_assigns[:id].present? ? "id=#{local_assigns[:id]}" : "" %>
<div <%= id_attr %> class="mb-8">
  <% if local_assigns[:title].present? %>
    <h3 class="text-xl font-semibold mb-3"><%= local_assigns[:title] %></h3>
  <% end %>
  
  <% if local_assigns[:description].present? %>
    <p class="mb-4 text-gray-600"><%= local_assigns[:description] %></p>
  <% end %>
  
  <div class="border rounded-lg overflow-hidden">
    <!-- Area di anteprima -->
    <div class="p-6 bg-white border-b">
      <%= yield %>
    </div>
    
    <!-- Area di codice -->
    <div class="bg-gray-50 p-4">
      <pre class="language-erb overflow-x-auto text-sm"><code><%= html_escape(local_assigns[:code_snippet]) %></code></pre>
    </div>
  </div>
</div> 