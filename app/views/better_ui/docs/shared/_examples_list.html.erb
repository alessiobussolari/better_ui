<%#
# Parametri:
# - examples: Array di hash, dove ogni hash rappresenta un esempio e contiene:
#   - id: (Stringa, opzionale) ID univoco per l'ancora dell'esempio
#   - title: (Stringa) Titolo dell'esempio
#   - description: (Stringa, opzionale) Descrizione dell'esempio
#   - snippets: (Array di Stringhe) Snippet di codice ERB da renderizzare e mostrare
%>

<% examples.each_with_index do |example, index| %>
  <%
    example_id = example[:id] || "example-#{example[:title].parameterize}-#{index}"
    example_title = example[:title]
    example_description = example[:description]
    example_snippets = example[:snippets] || []
  %>

  <%= render partial: 'better_ui/docs/shared/example', locals: {
        id: example_id,
        title: example_title,
        description: example_description,
        snippets: example_snippets,
      } %>
<% end %> 