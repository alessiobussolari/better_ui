<%#
  Partial per la barra di navigazione laterale dei componenti
  
  Parametri:
  - examples: Array di hash con gli esempi [{ id: 'example-id', title: 'Titolo Esempio' }]
  - sections: Array di hash con le sezioni [{ id: 'section-id', title: 'Titolo Sezione' }]
%>

<div class="md:w-64 flex-shrink-0">
  <div class="sticky top-4">
    <div class="bg-gray-50 rounded-lg p-4 shadow-sm border border-gray-100">
      <h3 class="text-sm font-semibold text-gray-500 uppercase tracking-wider mb-3">Contenuti</h3>
      
      <nav class="space-y-1">
        <% if local_assigns[:examples].present? %>
          <div class="mb-3">
            <h4 class="text-sm font-medium text-gray-700 mb-2">Esempi</h4>
            <ul class="ml-3 space-y-1">
              <% local_assigns[:examples].each do |example| %>
                <li>
                  <a href="#<%= example[:id] %>" class="text-sm text-indigo-600 hover:text-indigo-800 hover:underline">
                    <%= example[:title] %>
                  </a>
                </li>
              <% end %>
            </ul>
          </div>
        <% end %>
        
        <% if local_assigns[:sections].present? %>
          <div>
            <h4 class="text-sm font-medium text-gray-700 mb-2">Sezioni</h4>
            <ul class="ml-3 space-y-1">
              <% local_assigns[:sections].each do |section| %>
                <li>
                  <a href="#<%= section[:id] %>" class="text-sm text-indigo-600 hover:text-indigo-800 hover:underline">
                    <%= section[:title] %>
                  </a>
                </li>
              <% end %>
            </ul>
          </div>
        <% end %>
      </nav>
    </div>
  </div>
</div> 