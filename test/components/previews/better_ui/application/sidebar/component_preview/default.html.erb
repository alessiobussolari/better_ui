<div class="h-screen bg-gray-50 flex">
  <%= bui_sidebar(
    width: width,
    position: position,
    theme: theme,
    shadow: shadow,
    border: border,
    collapsible: collapsible
  ) do |sidebar| %>
    
    <!-- Header -->
    <% sidebar.with_header do %>
      <div class="flex items-center space-x-3">
        <div class="w-8 h-8 bg-indigo-600 rounded-lg flex items-center justify-center">
          <span class="text-white font-bold text-sm">B</span>
        </div>
        <div>
          <h1 class="text-lg font-semibold">Better UI</h1>
          <p class="text-sm text-gray-500">Component Library</p>
        </div>
      </div>
    <% end %>
    
    <!-- Navigation Sections -->
    <% sidebar.with_navigation_section(title: "Platform") do |section| %>
      <% section.with_item(
        type: :collapsible,
        label: "Playground"
      ) do |item| %>
        <% item.with_children(label: "Workspace", href: "#", active: true) %>
        <% item.with_children(label: "Projects", href: "#") %>
        <% item.with_children(label: "Experiments", href: "#") %>
      <% end %>
      
      <% section.with_item(
        label: "History",
        href: "#"
      ) %>
      
      <% section.with_item(
        label: "Settings",
        href: "#"
      ) %>
    <% end %>
    
    <% sidebar.with_navigation_section(title: "Development") do |section| %>
      <% section.with_item(
        type: :collapsible,
        label: "Models"
      ) do |item| %>
        <% item.with_children(label: "GPT-4", href: "#") %>
        <% item.with_children(label: "Claude", href: "#") %>
        <% item.with_children(label: "Gemini", href: "#") %>
      <% end %>
      
      <% section.with_item(
        label: "Documentation",
        href: "#",
        badge: "New"
      ) %>
    <% end %>
    
    <!-- Footer -->
    <% sidebar.with_footer do %>
      <div class="flex items-center space-x-3 p-3 bg-gray-50 rounded-lg">
        <div class="w-8 h-8 bg-gray-300 rounded-full flex items-center justify-center">
          <span class="text-gray-600 text-sm font-medium">AB</span>
        </div>
        <div class="flex-1">
          <p class="text-sm font-medium">Alessio Bussolari</p>
          <p class="text-xs text-gray-500">Piano Pro</p>
        </div>
      </div>
    <% end %>
    
  <% end %>
  
  <!-- Content Area -->
  <div class="flex-1 p-8">
    <h1 class="text-2xl font-bold text-gray-900 mb-4">Dashboard</h1>
    <p class="text-gray-600">Contenuto principale dell'applicazione.</p>
  </div>
</div>
