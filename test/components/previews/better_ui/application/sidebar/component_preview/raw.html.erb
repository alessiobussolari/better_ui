<div class="flex h-screen bg-gray-100">
  <%= render BetterUi::Application::Sidebar::Component.new(
    width: width,
    position: position,
    theme: theme,
    shadow: shadow,
    border: border,
    collapsible: collapsible
  ) do |sidebar| %>
    
    <!-- Header -->
    <% sidebar.with_header do %>
      <div class="flex items-center space-x-3">
        <div class="w-8 h-8 bg-purple-600 rounded-lg flex items-center justify-center">
          <span class="text-white font-bold text-sm">R</span>
        </div>
        <div>
          <h1 class="text-lg font-semibold">Raw Component</h1>
          <p class="text-sm text-gray-500">Direct Instantiation</p>
        </div>
      </div>
    <% end %>
    
    <!-- Navigation Sections -->
    <% sidebar.with_navigation_section(title: "Main Menu") do |section| %>
      <% section.with_item(
        type: :collapsible,
        label: "Dashboard"
      ) do |item| %>
        <% item.with_children(
          label: "Overview",
          href: "#",
          active: true
        ) %>
        <% item.with_children(
          label: "Analytics",
          href: "#"
        ) %>
        <% item.with_children(
          label: "Reports",
          href: "#"
        ) %>
      <% end %>
      
      <% section.with_item(
        label: "Users",
        href: "#"
      ) %>
      
      <% section.with_item(
        label: "Settings",
        href: "#"
      ) %>
    <% end %>
    
    <% sidebar.with_navigation_section(title: "Tools") do |section| %>
      <% section.with_item(
        type: :collapsible,
        label: "API"
      ) do |item| %>
        <% item.with_children(
          label: "Endpoints",
          href: "#"
        ) %>
        <% item.with_children(
          label: "Authentication",
          href: "#"
        ) %>
        <% item.with_children(
          label: "Rate Limits",
          href: "#"
        ) %>
      <% end %>
      
      <% section.with_item(
        label: "Documentation",
        href: "#",
        badge: "Beta"
      ) %>
    <% end %>
    
    <!-- Footer -->
    <% sidebar.with_footer do %>
      <div class="flex items-center space-x-3 p-3 bg-purple-50 rounded-lg">
        <div class="w-8 h-8 bg-purple-600 rounded-full flex items-center justify-center">
          <span class="text-white text-sm font-medium">U</span>
        </div>
        <div class="flex-1">
          <p class="text-sm font-medium">Demo User</p>
          <p class="text-xs text-gray-500">Raw Instance</p>
        </div>
      </div>
    <% end %>
    
  <% end %>
  
  <!-- Content Area -->
  <div class="flex-1 p-8">
    <h1 class="text-2xl font-bold text-gray-900 mb-4">Raw Component Demo</h1>
    <p class="text-gray-600">Esempio di sidebar con istanziazione diretta della classe.</p>
  </div>
</div>
