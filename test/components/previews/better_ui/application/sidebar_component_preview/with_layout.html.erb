<div class="p-0 h-screen flex flex-col">
  <%# Navbar in alto %>
  <%= render BetterUi::Application::NavbarComponent.new(
    brand: { name: "BetterUI Admin", url: "#" },
    variant: :light,
    items: [
      { label: "Home", url: "#", active: true },
      { label: "Profilo", url: "#" },
      { label: "Impostazioni", url: "#" }
    ],
    actions: [
      {
        content: %{
          <button type="button" class="text-gray-700 hover:text-orange-500 focus:outline-none focus:ring-2 focus:ring-orange-300 rounded-lg text-sm p-2 ml-2">
            <span class="sr-only">Notifiche</span>
            <svg class="w-5 h-5" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24">
              <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 5.4V3m0 2.4a5.3 5.3 0 0 1 5.1 5.3v1.8c0 2.4 1.9 3 1.9 4.2 0 .6 0 1.3-.5 1.3h-13c-.5 0-.5-.7-.5-1.3 0-1.2 1.9-1.8 1.9-4.2v-1.8A5.3 5.3 0 0 1 12 5.4ZM8.7 18c.1.9.3 1.5 1 2 .7.5 1.4.7 2.3.6.9.1 1.6-.1 2.3-.6.7-.5.9-1.1 1-2h-6.6Z"/>
            </svg>
          </button>
        }
      },
      {
        content: %{
          <button type="button" class="text-gray-700 hover:text-orange-500 focus:outline-none focus:ring-2 focus:ring-orange-300 rounded-lg text-sm p-2 ml-2">
            <span class="sr-only">Utente</span>
            <svg class="w-5 h-5" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24">
              <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 21a9 9 0 1 0 0-18 9 9 0 0 0 0 18Zm0 0a9 9 0 0 0 5-1.5 4 4 0 0 0-4-3.5h-2a4 4 0 0 0-4 3.5 9 9 0 0 0 5 1.5Zm3-11a3 3 0 1 1-6 0 3 3 0 0 1 6 0Z"/>
            </svg>
          </button>
        }
      }
    ]
  ) %>
  
  <%# Contenuto principale con sidebar %>
  <div class="flex-grow flex overflow-hidden">
    <%# Sidebar %>
    <div class="relative h-full w-72 flex-shrink-0">
      <%= sidebar %>
    </div>
    
    <%# Contenuto principale %>
    <div class="flex-1 overflow-auto p-8 bg-gray-50">
      <div class="max-w-4xl mx-auto">
        <div class="mb-6">
          <h1 class="text-3xl font-bold mb-2">Dashboard</h1>
          <p class="text-gray-600">Benvenuto nel pannello di amministrazione</p>
        </div>
        
        <div class="grid grid-cols-1 md:grid-cols-3 gap-6 mb-8">
          <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-6">
            <div class="flex items-center">
              <div class="p-3 rounded-full bg-orange-100 text-orange-600 mr-4">
                <svg class="w-6 h-6" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24">
                  <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 10h10m-5-5v10"/>
                </svg>
              </div>
              <div>
                <p class="text-gray-500 text-sm">Utenti</p>
                <p class="text-2xl font-semibold">2,451</p>
              </div>
            </div>
          </div>
          
          <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-6">
            <div class="flex items-center">
              <div class="p-3 rounded-full bg-green-100 text-green-600 mr-4">
                <svg class="w-6 h-6" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24">
                  <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6C6.5 1 1 8 5.8 13l6.2 7 6.2-7C23 8 17.5 1 12 6Z"/>
                </svg>
              </div>
              <div>
                <p class="text-gray-500 text-sm">Vendite</p>
                <p class="text-2xl font-semibold">€4,349</p>
              </div>
            </div>
          </div>
          
          <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-6">
            <div class="flex items-center">
              <div class="p-3 rounded-full bg-blue-100 text-blue-600 mr-4">
                <svg class="w-6 h-6" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24">
                  <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 4a2 2 0 0 0-2 2v12a2 2 0 0 0 2 2m0-16h10a2 2 0 0 1 2 2v12a2 2 0 0 1-2 2m-7-7h6m-6 3h6m-6-6h6"/>
                </svg>
              </div>
              <div>
                <p class="text-gray-500 text-sm">Ordini</p>
                <p class="text-2xl font-semibold">126</p>
              </div>
            </div>
          </div>
        </div>
        
        <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-6 mb-8">
          <h2 class="text-xl font-semibold mb-4">Attività recenti</h2>
          <div class="space-y-4">
            <div class="flex items-start">
              <div class="flex-shrink-0 mr-3">
                <div class="h-8 w-8 rounded-full bg-green-100 flex items-center justify-center">
                  <svg class="w-4 h-4 text-green-600" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24">
                    <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="m5 12 4.7 4.5 9.3-9"/>
                  </svg>
                </div>
              </div>
              <div>
                <p class="font-medium">Nuovo ordine ricevuto</p>
                <p class="text-sm text-gray-600">Ordine #12345 da Mario Rossi</p>
                <p class="text-xs text-gray-500 mt-1">2 minuti fa</p>
              </div>
            </div>
            
            <div class="flex items-start">
              <div class="flex-shrink-0 mr-3">
                <div class="h-8 w-8 rounded-full bg-blue-100 flex items-center justify-center">
                  <svg class="w-4 h-4 text-blue-600" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24">
                    <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 21a9 9 0 1 0 0-18 9 9 0 0 0 0 18Zm0 0a9 9 0 0 0 5-1.5 4 4 0 0 0-4-3.5h-2a4 4 0 0 0-4 3.5 9 9 0 0 0 5 1.5Zm3-11a3 3 0 1 1-6 0 3 3 0 0 1 6 0Z"/>
                  </svg>
                </div>
              </div>
              <div>
                <p class="font-medium">Nuovo utente registrato</p>
                <p class="text-sm text-gray-600">Giulia Bianchi si è registrata</p>
                <p class="text-xs text-gray-500 mt-1">15 minuti fa</p>
              </div>
            </div>
            
            <div class="flex items-start">
              <div class="flex-shrink-0 mr-3">
                <div class="h-8 w-8 rounded-full bg-orange-100 flex items-center justify-center">
                  <svg class="w-4 h-4 text-orange-600" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24">
                    <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 7.8v8.4M9 11l3-3.2 3 3.2m-9 0a6 6 0 1 1 12 0 6 6 0 0 1-12 0Z"/>
                  </svg>
                </div>
              </div>
              <div>
                <p class="font-medium">Aggiornamento prodotto</p>
                <p class="text-sm text-gray-600">Prodotto "Smartphone XYZ" aggiornato</p>
                <p class="text-xs text-gray-500 mt-1">1 ora fa</p>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div> 