<div class="p-8">
  <h1 class="text-xl font-bold mb-6">Colori degli avatar</h1>
  
  <div class="grid grid-cols-1 md:grid-cols-5 gap-6">
    <% variants.each do |variant| %>
      <div class="flex flex-col items-center space-y-3">
        <%= render BetterUi::General::AvatarComponent.new(
          name: "Mario Rossi",
          size: :large,
          type: variant[:type]
        ) %>
        <span class="text-sm text-gray-500"><%= variant[:label] %></span>
      </div>
    <% end %>
  </div>
</div> 