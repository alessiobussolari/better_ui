<div class="p-8">
  <h1 class="text-xl font-bold mb-6">Casi d'uso Badge</h1>
  
  <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
    <!-- Status -->
    <div class="p-6 bg-white rounded-lg shadow">
      <h3 class="mb-4 font-semibold">Status</h3>
      <div class="flex flex-wrap gap-4">
        <%= render BetterUi::General::BadgeComponent.new(
          label: "Bozza",
          type: :gray,
          rounded: :full,
          size: :small
        ) %>
        
        <%= render BetterUi::General::BadgeComponent.new(
          label: "In attesa",
          type: :blue,
          rounded: :full,
          size: :small
        ) %>
        
        <%= render BetterUi::General::BadgeComponent.new(
          label: "Approvato",
          type: :green,
          rounded: :full,
          icon: "check",
          icon_position: :left,
          size: :small
        ) %>
        
        <%= render BetterUi::General::BadgeComponent.new(
          label: "Rifiutato",
          type: :red,
          rounded: :full,
          icon: "times",
          icon_position: :left,
          size: :small
        ) %>
      </div>
    </div>
    
    <!-- Pills -->
    <div class="p-6 bg-white rounded-lg shadow">
      <h3 class="mb-4 font-semibold">Categorie</h3>
      <div class="flex flex-wrap gap-2">
        <%= render BetterUi::General::BadgeComponent.new(
          label: "Web",
          type: :orange,
          rounded: :full,
          outline: true,
          size: :small
        ) %>
        
        <%= render BetterUi::General::BadgeComponent.new(
          label: "Design",
          type: :violet,
          rounded: :full,
          outline: true,
          size: :small
        ) %>
        
        <%= render BetterUi::General::BadgeComponent.new(
          label: "Marketing",
          type: :blue,
          rounded: :full,
          outline: true,
          size: :small
        ) %>
        
        <%= render BetterUi::General::BadgeComponent.new(
          label: "Sviluppo",
          type: :green,
          rounded: :full,
          outline: true,
          size: :small
        ) %>
        
        <%= render BetterUi::General::BadgeComponent.new(
          label: "UX",
          type: :red,
          rounded: :full,
          outline: true,
          size: :small
        ) %>
      </div>
    </div>
    
    <!-- Notifiche -->
    <div class="p-6 bg-white rounded-lg shadow">
      <h3 class="mb-4 font-semibold">Notifiche</h3>
      <div class="flex gap-8 items-center">
        <div class="relative">
          <button class="p-2 bg-gray-100 rounded-full">
            <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 17h5l-1.405-1.405A2.032 2.032 0 0118 14.158V11a6.002 6.002 0 00-4-5.659V5a2 2 0 10-4 0v.341C7.67 6.165 6 8.388 6 11v3.159c0 .538-.214 1.055-.595 1.436L4 17h5m6 0v1a3 3 0 11-6 0v-1m6 0H9"></path>
            </svg>
          </button>
          <%= render BetterUi::General::BadgeComponent.new(
            label: "5",
            type: :red,
            notification: true,
            rounded: :full
          ) %>
        </div>
        
        <div class="relative">
          <button class="p-2 bg-gray-100 rounded-full">
            <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
            </svg>
          </button>
          <%= render BetterUi::General::BadgeComponent.new(
            label: "2",
            type: :blue,
            notification: true,
            rounded: :full
          ) %>
        </div>
        
        <div class="relative">
          <button class="p-2 bg-gray-100 rounded-full">
            <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
            </svg>
          </button>
          <%= render BetterUi::General::BadgeComponent.new(
            label: "3",
            type: :green,
            notification: true,
            rounded: :full
          ) %>
        </div>
      </div>
    </div>
    
    <!-- Confronto tra stili -->
    <div class="p-6 bg-white rounded-lg shadow">
      <h3 class="mb-4 font-semibold">Versioni prodotto</h3>
      <div class="flex flex-col space-y-4">
        <div class="flex items-center">
          <span class="w-24 text-sm">Standard:</span>
          <%= render BetterUi::General::BadgeComponent.new(
            label: "v1.0.0",
            type: :blue,
            size: :small
          ) %>
        </div>
        
        <div class="flex items-center">
          <span class="w-24 text-sm">Outline:</span>
          <%= render BetterUi::General::BadgeComponent.new(
            label: "v1.0.1-beta",
            type: :blue,
            outline: true,
            size: :small
          ) %>
        </div>
        
        <div class="flex items-center">
          <span class="w-24 text-sm">Pill:</span>
          <%= render BetterUi::General::BadgeComponent.new(
            label: "v2.0.0-alpha",
            type: :orange,
            rounded: :full,
            size: :small
          ) %>
        </div>
        
        <div class="flex items-center">
          <span class="w-24 text-sm">Con icona:</span>
          <%= render BetterUi::General::BadgeComponent.new(
            label: "v2.1.0-rc",
            type: :green,
            icon: "tag",
            icon_position: :left,
            size: :small
          ) %>
        </div>
      </div>
    </div>
  </div>
</div> 