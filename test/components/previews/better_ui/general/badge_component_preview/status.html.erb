<div class="p-4 space-y-6">
  <h3 class="text-lg font-semibold">Indicatori di stato</h3>
  
  <div class="space-y-4">
    <div class="flex flex-col gap-4 w-80">
      <div class="flex items-center justify-between p-3 border rounded-md">
        <span>Stato server</span>
        <div class="flex items-center">
          <%= render BetterUi::General::BadgeComponent.new(
            text: "Online",
            variant: :success,
            size: :sm,
            icon: "circle"
          ) %>
        </div>
      </div>
      
      <div class="flex items-center justify-between p-3 border rounded-md">
        <span>Stato database</span>
        <div class="flex items-center">
          <%= render BetterUi::General::BadgeComponent.new(
            text: "In manutenzione",
            variant: :warning,
            size: :sm,
            icon: "exclamation-triangle"
          ) %>
        </div>
      </div>
      
      <div class="flex items-center justify-between p-3 border rounded-md">
        <span>Stato API</span>
        <div class="flex items-center">
          <%= render BetterUi::General::BadgeComponent.new(
            text: "Offline",
            variant: :danger,
            size: :sm,
            icon: "times-circle"
          ) %>
        </div>
      </div>
      
      <div class="flex items-center justify-between p-3 border rounded-md">
        <span>Stato pagamento</span>
        <div class="flex items-center">
          <%= render BetterUi::General::BadgeComponent.new(
            text: "In attesa",
            variant: :info,
            size: :sm,
            icon: "clock"
          ) %>
        </div>
      </div>
    </div>
  </div>
  
  <h3 class="text-lg font-semibold">Punti di stato</h3>
  
  <div class="space-y-4">
    <div class="flex items-center gap-6">
      <div class="flex items-center gap-2">
        <%= render BetterUi::General::BadgeComponent.new(
          variant: :success,
          rounded: :full,
          size: :xs,
          custom_class: "h-2 w-2"
        ) %>
        <span class="text-sm">Online</span>
      </div>
      
      <div class="flex items-center gap-2">
        <%= render BetterUi::General::BadgeComponent.new(
          variant: :warning,
          rounded: :full,
          size: :xs,
          custom_class: "h-2 w-2"
        ) %>
        <span class="text-sm">Occupato</span>
      </div>
      
      <div class="flex items-center gap-2">
        <%= render BetterUi::General::BadgeComponent.new(
          variant: :danger,
          rounded: :full,
          size: :xs,
          custom_class: "h-2 w-2"
        ) %>
        <span class="text-sm">Offline</span>
      </div>
      
      <div class="flex items-center gap-2">
        <%= render BetterUi::General::BadgeComponent.new(
          variant: :light,
          rounded: :full,
          size: :xs,
          custom_class: "h-2 w-2"
        ) %>
        <span class="text-sm">Inattivo</span>
      </div>
    </div>
  </div>
</div> 