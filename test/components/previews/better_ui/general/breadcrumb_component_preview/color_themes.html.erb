<%
  bg_classes = {
    default: "bg-black",
    white: "bg-white",
    red: "bg-red-500",
    rose: "bg-rose-500",
    orange: "bg-orange-500",
    green: "bg-green-500",
    blue: "bg-blue-500",
    yellow: "bg-yellow-500",
    violet: "bg-violet-500"
  }
  
  items = [
    { label: "Home", url: "#", icon: "home" },
    { label: "Prodotti", url: "#", icon: "box" },
    "Dettaglio"
  ]
%>

<div class="space-y-6">
  <% themes.each do |theme_data| %>
    <div class="p-1">
      <h3 class="text-lg font-medium mb-2"><%= theme_data[:label] %></h3>
      <div class="<%= bg_classes[theme_data[:theme]] %> p-4 rounded-md">
        <%= render BetterUi::General::BreadcrumbComponent.new(
          items: items,
          theme: theme_data[:theme],
          separator: :chevron,
          size: :md
        ) %>
      </div>
    </div>
  <% end %>
</div> 