<div class="p-8 space-y-8">
  <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
    <% variants.each do |variant| %>
      <div class="flex flex-col p-4 border rounded-md bg-white">
        <h3 class="text-lg font-medium mb-4"><%= variant[:label] %></h3>
        <div class="flex flex-wrap gap-3">
          <%= render BetterUi::General::ButtonComponent.new(
            label: "Bottone", 
            type: :default,
            rounded: variant[:rounded]
          ) %>
        </div>
      </div>
    <% end %>
  </div>
  
  <div class="p-4 border rounded-md bg-white">
    <h3 class="text-lg font-medium mb-4">Esempi con vari colori</h3>
    <div class="flex flex-wrap gap-3 mb-4">
      <%= render BetterUi::General::ButtonComponent.new(label: "Default", type: :default, rounded: :none) %>
      <%= render BetterUi::General::ButtonComponent.new(label: "White", type: :white, rounded: :xs) %>
      <%= render BetterUi::General::ButtonComponent.new(label: "Red", type: :red, rounded: :sm) %>
      <%= render BetterUi::General::ButtonComponent.new(label: "Rose", type: :rose, rounded: :md) %>
      <%= render BetterUi::General::ButtonComponent.new(label: "Orange", type: :orange, rounded: :lg) %>
      <%= render BetterUi::General::ButtonComponent.new(label: "Green", type: :green, rounded: :xl) %>
    </div>
    
    <div class="flex flex-wrap gap-3">
      <%= render BetterUi::General::ButtonComponent.new(label: "Blue", type: :blue, rounded: :none) %>
      <%= render BetterUi::General::ButtonComponent.new(label: "Yellow", type: :yellow, rounded: :sm) %>
      <%= render BetterUi::General::ButtonComponent.new(label: "Violet", type: :violet, rounded: :lg) %>
      <%= render BetterUi::General::ButtonComponent.new(label: "Full", type: :default, rounded: :full) %>
    </div>
  </div>
  
  <div class="p-4 border rounded-md bg-white">
    <h3 class="text-lg font-medium mb-4">Pulsanti circolari con icone</h3>
    <div class="flex flex-wrap gap-3">
      <%= render BetterUi::General::ButtonComponent.new(
        type: :default,
        rounded: :full,
        icon: "plus"
      ) %>
      
      <%= render BetterUi::General::ButtonComponent.new(
        type: :red,
        rounded: :full,
        icon: "trash"
      ) %>
      
      <%= render BetterUi::General::ButtonComponent.new(
        type: :green,
        rounded: :full,
        icon: "check"
      ) %>
      
      <%= render BetterUi::General::ButtonComponent.new(
        type: :blue,
        rounded: :full,
        icon: "pencil"
      ) %>
      
      <%= render BetterUi::General::ButtonComponent.new(
        type: :orange,
        rounded: :full,
        icon: "bell"
      ) %>
    </div>
  </div>
</div> 