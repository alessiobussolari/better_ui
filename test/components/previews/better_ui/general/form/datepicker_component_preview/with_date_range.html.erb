<%= form_with(url: "/example", method: :post, html: { class: "w-full" }) do |form| %>
  <%= render(BetterUi::General::Form::DatepickerComponent.new(
    name: "data_appuntamento",
    label: "Data appuntamento",
    form: form,
    min: Time.current.to_date,
    max: (Time.current + 30.days).to_date
  )) %>
<% end %> 