<%= render(BetterUi::General::Form::FormGroupComponent.new(
  title: "Informazioni di contatto",
  description: "Come possiamo contattarti"
)) do %>
  <div class="space-y-4">
    <%= render BetterUi::General::Form::TextInputComponent.new(name: "email", label: "Email", type: "email") %>
    <%= render BetterUi::General::Form::TextInputComponent.new(name: "telefono", label: "Telefono", type: "tel") %>
    <%= render BetterUi::General::Form::TextareaComponent.new(name: "indirizzo", label: "Indirizzo", rows: 3) %>
    <%= render BetterUi::General::Form::SelectComponent.new(
      name: "provincia",
      label: "Provincia",
      options: [
        ["Milano", "MI"],
        ["Roma", "RM"],
        ["Napoli", "NA"],
        ["Torino", "TO"]
      ],
      prompt: "Seleziona una provincia"
    ) %>
  </div>
<% end %> 