<%# Esempio di GRUPPO RADIO COMPLETO - Stesso name, value diversi %>
<div class="space-y-3">
  <h3 class="text-lg font-medium text-gray-900">Gruppo Radio: Selezione Genere</h3>
  
  <%= bui_input_radio(
    name: "gender_demo",
    value: "male",
    label: "Maschio",
    theme: theme,
    size: size,
    rounded: rounded,
    checked: value == "male",
    required: required,
    disabled: disabled,
    classes: classes
  ) %>
  
  <%= bui_input_radio(
    name: "gender_demo",
    value: "female", 
    label: "Femmina",
    theme: theme,
    size: size,
    rounded: rounded,
    checked: value == "female",
    required: required,
    disabled: disabled,
    classes: classes
  ) %>
  
  <%= bui_input_radio(
    name: "gender_demo",
    value: "other",
    label: "Altro",
    theme: theme,
    size: size,
    rounded: rounded,
    checked: value == "other",
    required: required,
    disabled: disabled,
    classes: classes
  ) %>
</div>

