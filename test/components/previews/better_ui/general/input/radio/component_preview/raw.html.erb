<div class="space-y-3">
  <h3 class="text-lg font-medium text-gray-900">Gruppo Radio: Selezione Genere</h3>
  
  <%= render BetterUi::General::Input::Radio::Component.new(
    name: "gender_direct",
    value: "male",
    label: "Maschio",
    theme: theme,
    size: size,
    rounded: rounded,
    checked: value == "male",
    required: required,
    disabled: disabled,
    classes: classes
  ) %>
  
  <%= render BetterUi::General::Input::Radio::Component.new(
    name: "gender_direct",
    value: "female",
    label: "Femmina", 
    theme: theme,
    size: size,
    rounded: rounded,
    checked: value == "female",
    required: required,
    disabled: disabled,
    classes: classes
  ) %>
  
  <%= render BetterUi::General::Input::Radio::Component.new(
    name: "gender_direct",
    value: "other",
    label: "Altro",
    theme: theme,
    size: size,
    rounded: rounded,
    checked: value == "other",
    required: required,
    disabled: disabled,
    classes: classes
  ) %>
</div>

