<div class="p-8">
  <h1 class="text-xl font-bold mb-6">Temi di Colore</h1>
  
  <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
    <% variants.each do |variant| %>
      <div class="flex flex-col items-center p-4 bg-slate-100 rounded-lg h-36">
        <h3 class="mb-4 font-semibold"><%= variant[:label] %></h3>
        <%= render BetterUi::General::SpinnerComponent.new(
          theme: variant[:theme],
          size: :medium
        ) %>
      </div>
    <% end %>
  </div>
</div> 