<div class="p-4 space-y-6">
  <h3 class="text-lg font-semibold">Tipi di spinner</h3>
  
  <div class="flex gap-12 items-center">
    <div class="flex flex-col items-center">
      <%= render BetterUi::General::SpinnerComponent.new(
        type: :border,
        size: :lg
      ) %>
      <span class="mt-2 text-sm text-gray-500">border (default)</span>
    </div>
    
    <div class="flex flex-col items-center">
      <%= render BetterUi::General::SpinnerComponent.new(
        type: :svg,
        size: :lg
      ) %>
      <span class="mt-2 text-sm text-gray-500">svg</span>
    </div>
  </div>
  
  <h3 class="text-lg font-semibold mt-6">Confronto tra tipi e dimensioni</h3>
  
  <div class="grid grid-cols-2 gap-12">
    <div>
      <h4 class="font-medium mb-4">Tipo: border</h4>
      <div class="flex flex-wrap gap-4 items-end">
        <%= render BetterUi::General::SpinnerComponent.new(type: :border, size: :sm) %>
        <%= render BetterUi::General::SpinnerComponent.new(type: :border, size: :md) %>
        <%= render BetterUi::General::SpinnerComponent.new(type: :border, size: :lg) %>
        <%= render BetterUi::General::SpinnerComponent.new(type: :border, size: :xl) %>
      </div>
    </div>
    
    <div>
      <h4 class="font-medium mb-4">Tipo: svg</h4>
      <div class="flex flex-wrap gap-4 items-end">
        <%= render BetterUi::General::SpinnerComponent.new(type: :svg, size: :sm) %>
        <%= render BetterUi::General::SpinnerComponent.new(type: :svg, size: :md) %>
        <%= render BetterUi::General::SpinnerComponent.new(type: :svg, size: :lg) %>
        <%= render BetterUi::General::SpinnerComponent.new(type: :svg, size: :xl) %>
      </div>
    </div>
  </div>
</div> 