<div class="p-4 space-y-6">
  <h3 class="text-lg font-semibold">Varianti di colore</h3>
  
  <div class="flex flex-wrap gap-10 items-center">
    <div class="flex flex-col items-center">
      <%= render BetterUi::General::SpinnerComponent.new(variant: :primary, size: :lg) %>
      <span class="mt-2 text-sm text-gray-500">primary (default)</span>
    </div>
    
    <div class="flex flex-col items-center">
      <%= render BetterUi::General::SpinnerComponent.new(variant: :secondary, size: :lg) %>
      <span class="mt-2 text-sm text-gray-500">secondary</span>
    </div>
    
    <div class="flex flex-col items-center">
      <%= render BetterUi::General::SpinnerComponent.new(variant: :success, size: :lg) %>
      <span class="mt-2 text-sm text-gray-500">success</span>
    </div>
    
    <div class="flex flex-col items-center">
      <%= render BetterUi::General::SpinnerComponent.new(variant: :warning, size: :lg) %>
      <span class="mt-2 text-sm text-gray-500">warning</span>
    </div>
    
    <div class="flex flex-col items-center">
      <%= render BetterUi::General::SpinnerComponent.new(variant: :danger, size: :lg) %>
      <span class="mt-2 text-sm text-gray-500">danger</span>
    </div>
    
    <div class="flex flex-col items-center">
      <%= render BetterUi::General::SpinnerComponent.new(variant: :info, size: :lg) %>
      <span class="mt-2 text-sm text-gray-500">info</span>
    </div>
  </div>
  
  <div class="flex flex-wrap gap-10 items-center mt-6">
    <div class="flex flex-col items-center">
      <%= render BetterUi::General::SpinnerComponent.new(variant: :light, size: :lg) %>
      <span class="mt-2 text-sm text-gray-500">light</span>
    </div>
    
    <div class="flex flex-col items-center">
      <%= render BetterUi::General::SpinnerComponent.new(variant: :dark, size: :lg) %>
      <span class="mt-2 text-sm text-gray-500">dark</span>
    </div>
    
    <div class="flex flex-col items-center bg-gray-800 p-4 rounded-md">
      <%= render BetterUi::General::SpinnerComponent.new(variant: :white, size: :lg) %>
      <span class="mt-2 text-sm text-white">white</span>
    </div>
  </div>
</div> 