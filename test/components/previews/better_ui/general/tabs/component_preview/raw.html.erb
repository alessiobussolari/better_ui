<!-- Tabs Navigation -->
<%= render BetterUi::General::Tabs::Component.new(
  variant: variant,
  theme: theme,
  size: size,
  orientation: orientation,
  classes: classes
) do %>
  <%= render BetterUi::General::Tabs::TabComponent.new(text: "Tab 1", target: "tab1", active: true) %>
  <%= render BetterUi::General::Tabs::TabComponent.new(text: "Tab 2", target: "tab2") %>
<% end %>

<!-- Tab Panels -->
<%= render BetterUi::General::Tabs::PanelComponent.new(id: "tab1", active: true, classes: "mt-4 p-4 bg-gray-50 rounded-lg") do %>
  <p class="text-gray-900">Contenuto del primo pannello</p>
<% end %>

<%= render BetterUi::General::Tabs::PanelComponent.new(id: "tab2", classes: "mt-4 p-4 bg-gray-50 rounded-lg") do %>
  <p class="text-gray-900">Contenuto del secondo pannello</p>
<% end %>
