<%
  # Include degli helper necessari per utilizzare i componenti
  extend BetterUi::Application::Components::Navbar::NavbarHelper
  extend BetterUi::Application::Components::Main::MainHelper
%>

<div class="relative min-h-screen bg-gray-100">
  <!-- Navbar -->
  <%= bui_navbar(
    theme: navbar_theme,
    shadow: :small,
    border: true,
    with_sidebar: with_sidebar,
    sidebar_width: sidebar_width,
    actions: [
      {
        type: :button,
        label: "Nuovo Utente",
        theme: :primary,
        icon: "plus",
        href: "/users/new"
      },
      {
        type: :avatar,
        avatar: { initials: "AB", size: :small, theme: :green },
        href: "/profile"
      }
    ]
  ) do %>
    <div class="flex items-center">
      <h2 class="text-lg font-semibold mr-4">Dettaglio Utente</h2>
      <div class="flex space-x-1 items-center text-gray-500 text-sm">
        <a href="/" class="hover:text-gray-700">Admin</a>
        <span>/</span>
        <a href="/users" class="hover:text-gray-700">Utenti</a>
        <span>/</span>
        <span class="text-gray-900 font-medium">Dettaglio</span>
      </div>
    </div>
  <% end %>

  <!-- Main Content -->
  <%= bui_main(
    with_sidebar: false,
    padding: true,
    inner_padding: true,
    rounded: main_rounded,
    shadow: :medium,
    sidebar_width: sidebar_width
  ) do %>
    <div class="flex justify-between items-center mb-6">
      <h1 class="text-2xl font-bold">Dettaglio Utente</h1>
      <div class="space-x-2">
        <button class="px-3 py-2 bg-gray-100 text-gray-700 rounded-md hover:bg-gray-200">
          Modifica
        </button>
        <button class="px-3 py-2 bg-red-100 text-red-700 rounded-md hover:bg-red-200">
          Elimina
        </button>
      </div>
    </div>
    
    <div class="bg-white shadow rounded-lg p-6 border border-gray-100 mb-6">
      <div class="flex items-start">
        <div class="flex-shrink-0">
          <div class="h-24 w-24 bg-blue-600 rounded-full flex items-center justify-center">
            <span class="text-3xl font-bold text-white">JD</span>
          </div>
        </div>
        
        <div class="ml-6">
          <h2 class="text-xl font-bold">John Doe</h2>
          <p class="text-gray-500">john.doe@example.com</p>
          <p class="mt-1">
            <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-green-100 text-green-800">
              Amministratore
            </span>
            <span class="ml-2 inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-blue-100 text-blue-800">
              Team: Marketing
            </span>
          </p>
          <p class="mt-3 text-gray-600">Utente dal: 15 Gennaio 2023</p>
        </div>
      </div>
    </div>
    
    <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
      <div class="bg-white shadow rounded-lg p-6 border border-gray-100">
        <h3 class="font-semibold text-lg mb-4">Informazioni Personali</h3>
        <div class="space-y-3">
          <div>
            <p class="text-sm text-gray-500">Nome Completo</p>
            <p class="font-medium">John Doe</p>
          </div>
          <div>
            <p class="text-sm text-gray-500">Email</p>
            <p class="font-medium">john.doe@example.com</p>
          </div>
          <div>
            <p class="text-sm text-gray-500">Telefono</p>
            <p class="font-medium">+1 (555) 123-4567</p>
          </div>
          <div>
            <p class="text-sm text-gray-500">Posizione</p>
            <p class="font-medium">Project Manager</p>
          </div>
        </div>
      </div>
      
      <div class="bg-white shadow rounded-lg p-6 border border-gray-100">
        <h3 class="font-semibold text-lg mb-4">Statistiche</h3>
        <div class="space-y-4">
          <div>
            <div class="flex justify-between mb-1">
              <p class="text-sm font-medium">Progetti Completati</p>
              <p class="text-sm text-gray-500">16/20</p>
            </div>
            <div class="bg-gray-200 rounded-full h-2">
              <div class="bg-blue-600 h-2 rounded-full" style="width: 80%"></div>
            </div>
          </div>
          <div>
            <div class="flex justify-between mb-1">
              <p class="text-sm font-medium">Task Completati</p>
              <p class="text-sm text-gray-500">45/50</p>
            </div>
            <div class="bg-gray-200 rounded-full h-2">
              <div class="bg-green-600 h-2 rounded-full" style="width: 90%"></div>
            </div>
          </div>
          <div>
            <div class="flex justify-between mb-1">
              <p class="text-sm font-medium">Ore Reportate</p>
              <p class="text-sm text-gray-500">124/160</p>
            </div>
            <div class="bg-gray-200 rounded-full h-2">
              <div class="bg-yellow-600 h-2 rounded-full" style="width: 77%"></div>
            </div>
          </div>
        </div>
      </div>
      
      <div class="bg-white shadow rounded-lg p-6 border border-gray-100">
        <h3 class="font-semibold text-lg mb-4">Attivit√† Recenti</h3>
        <div class="space-y-3">
          <div class="border-b border-gray-100 pb-3">
            <p class="font-medium">Progetto XYZ aggiornato</p>
            <p class="text-sm text-gray-500">Oggi, 10:23</p>
          </div>
          <div class="border-b border-gray-100 pb-3">
            <p class="font-medium">Task #123 completato</p>
            <p class="text-sm text-gray-500">Ieri, 15:45</p>
          </div>
          <div class="border-b border-gray-100 pb-3">
            <p class="font-medium">Commento su Task #456</p>
            <p class="text-sm text-gray-500">2 giorni fa, 09:15</p>
          </div>
          <div>
            <p class="font-medium">Nuovo progetto creato</p>
            <p class="text-sm text-gray-500">3 giorni fa, 14:30</p>
          </div>
        </div>
      </div>
    </div>
  <% end %>
</div>
